<% provide(:title, 'Edit User') %> 
<h1>Update your profile.</h1> 

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :f_name , 'First Name' %>
            <%= f.text_field :f_name, class: 'form-control' %>
            
            <%= f.label :l_name , 'Last Name' %>
            <%= f.text_field :l_name, class: 'form-control' %> 
            
            <%= f.label :email , 'Email' %>
            <%= f.email_field :email, class: 'form-control' %> 
            
            <%= f.label :password , 'Password' %>
            <%= f.password_field :password, class: 'form-control' %> 
            
            <%= f.label :password_confirmation , 'Confirm Password' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %> 
            
            <%= f.label :city , 'City' %>
            <%= f.text_field :city, class: 'form-control' %> 
            
            <%= f.label :gender %>
            <%= f.radio_button :gender, 'Male', class: 'form-control' %> Male
            <%= f.radio_button :gender, 'Female', class: 'form-control' %> Female 
            
            <%= f.submit "Update", class: 'btn btn-primary' %>
            <div class="gravatar_edit">
                <%= gravatar_for @user %>
                <a href="http://gravatar.com/emails" target=_blank>change</a>
            </div>
        <% end %>
    </div>
</div>